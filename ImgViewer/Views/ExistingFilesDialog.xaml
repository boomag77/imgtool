<Window x:Class="ImgViewer.Views.ExistingFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Existing Processed Files Detected"
        Height="220"
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1C1F24">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#2F3136"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#464A52"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E5E7EA"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#AAB0B7"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#1E66E0"/>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1E66E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1553C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Existing processed files detected"
                   Foreground="{StaticResource PrimaryTextBrush}"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6"/>

        <Border Grid.Row="1"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource PanelBorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,0,12">
            <TextBlock x:Name="MessageText"
                       Foreground="{StaticResource SecondaryTextBrush}"
                       TextWrapping="Wrap"/>
        </Border>

        <UniformGrid Grid.Row="2" Columns="5" HorizontalAlignment="Center">
            <Button Style="{StaticResource DialogButtonStyle}" Content="Yes" Click="Yes_Click"/>
            <Button Style="{StaticResource DialogButtonStyle}" Content="Yes to All" Click="YesToAll_Click"/>
            <Button Style="{StaticResource DialogButtonStyle}" Content="No" Click="No_Click"/>
            <Button Style="{StaticResource DialogButtonStyle}" Content="No to All" Click="NoToAll_Click"/>
            <Button Style="{StaticResource DialogButtonStyle}" Content="Cancel" Click="Cancel_Click"/>
        </UniformGrid>
    </Grid>
</Window>
